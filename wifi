#include <WiFi.h>

const char *ssid = "TS";          // Replace with your Wi-Fi SSID
const char *password = "as";  // Replace with your Wi-Fi password

void setup() {
  Serial.begin(115200);
  
  // Connect to Wi-Fi
  WiFi.begin(ssid, password);
  
  Serial.print("Connecting to WiFi");
  
  // Wait for connection
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  
  Serial.println("\nConnected to Wi-Fi!");
  Serial.print("IP address: ");
  Serial.println(WiFi.localIP()); // Print the local IP address
}

void loop() {
  // You can add your logic here, e.g., checking Wi-Fi status
  if (WiFi.status() != WL_CONNECTED) {
    Serial.println("Wi-Fi disconnected. Reconnecting...");
    WiFi.reconnect(); // Try to reconnect if disconnected
  }
  delay(5000); // Wait for 5 seconds before checking again
}
